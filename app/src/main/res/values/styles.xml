<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Ztext" parent="Z1">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="zPressedTextColor">#fff</item>
        <item name="zPressedTextSize">16sp</item>
        <item name="zSelectedTextColor">#0ff</item>
        <item name="zSelectedTextSize">17sp</item>
        <item name="zUnableTextColor">#666</item>
    </style>

    <style name="Z1">
        <item name="android:clickable">true</item>
        <item name="android:padding">8dp</item>
        <item name="zType">color</item>
        <item name="zColor">#00f</item>
        <item name="zCornerBL">10dp</item>
        <item name="zCornerBR">10dp</item>
        <item name="zPressedColor">#f00</item>
        <item name="zPressedCornerTL">10dp</item>
        <item name="zPressedCornerTR">10dp</item>
        <item name="zPressedPaddingT">-4dp</item>
        <item name="zPressedStrokeColor">#0f0</item>
        <item name="zPressedStrokeWidth">3dp</item>
        <item name="zSelectedColor">#f0f</item>
        <item name="zSelectedCornerBL">5dp</item>
        <item name="zSelectedCornerBR">10dp</item>
        <item name="zSelectedCornerTL">15dp</item>
        <item name="zSelectedCornerTR">25dp</item>
        <item name="zSelectedStrokeColor">#ff0</item>
        <item name="zSelectedStrokeWidth">3dp</item>
        <item name="zStrokeColor">#000</item>
        <item name="zStrokeWidth">3dp</item>
        <item name="zUnableColor">#ccc</item>
        <item name="zUnablePaddingL">-4dp</item>
        <item name="zUnableStrokeColor">#999</item>
        <item name="zUnableStrokeWidth">3dp</item>
    </style>

</resources>
